%% In our headers, we pack both the section number and the section title
%% into the \rightmark.  These are then extracted using \rightmarksection
%% and \rightmarktitle
%% This code comes from Heiko Oberdiek and David Carlisle
%% See http://tex.stackexchange.com/questions/121452/separate-section-number-in-headers
%% for more details
\makeatletter
\newcommand*{\rightmarksection}{%
  \begingroup
    \protected@edef\temp{\rightmark}%
    \expandafter\@rightmarksection\temp. \@nil
  \endgroup
}
\def\@rightmarksection#1+#2\@nil{%
  \def\temp{#2}%
  \ifx\temp\@empty
  \else
    #1%
  \fi  
}
\makeatother

\makeatletter
\newcommand*{\rightmarktitle}{%
  \begingroup
    \protected@edef\temp{\rightmark}%
    \expandafter\@rightmarktitle\temp \@nil
  \endgroup
}
\def\@rightmarktitle#1+#2\@nil{%
  \def\temp{#2}%
  \ifx\temp\@empty
  \else
    #2%
  \fi  
}
\makeatother
