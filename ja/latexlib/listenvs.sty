\def\trivlist{%
  \parsep\z@
  \@nmbrlistfalse
  \@trivlist
  \labelwidth\z@
  \leftmargin\z@
  \itemindent\z@
  \let\@itemlabel\@empty
  \def\makelabel##1{##1}}

\newif\ifwithinitemize
\def\itemize{%
  \withinitemizetrue%
  \leftcodemargine\z@%
  \ifnum\@itemdepth>\tw@
    \@toodeep
  \else
    \advance\@itemdepth\@ne
    \edef\@itemitem{labelitem\romannumeral\the\@itemdepth}%
    \expandafter\list\csname\@itemitem\endcsname
      {\renewcommand{\labelitemi}{%
         {\setlength{\unitlength}{1pt}{\color{70gray}\put(0,4){\circle*{3}}}}}%
       \renewcommand{\labelitemii}{%
         {\setlength{\unitlength}{1pt}{\color{70gray}\put(0,3){\circle*{2}}}}}%
       \setlength{\parskip}{0\baselineskip}%
       \setlength{\topsep}{.5\baselineskip}%
       \setlength{\parsep}{0\baselineskip}%
       \setlength{\partopsep}{0\baselineskip}%
       \setlength{\itemsep}{0\baselineskip}%
       \setlength{\labelwidth}{1em}%
       \setlength{\labelsep}{0.75em}%
       \setlength{\leftmargin}{2em}%
       \setlength{\itemindent}{0em}%
       \setlength{\listparindent}{0em}%
    }
  \fi}
\def\endmyitemize{\endlist}

\def\enumerate{%
  \leftcodemargine\z@%
  \ifnum\@enumdepth>\tw@
    \@toodeep
  \else
    \advance\@enumdepth\@ne
    \edef\@enumctr{enum\romannumeral\the\@enumdepth}%
    \list{\csname label\@enumctr\endcsname}%
      {\usecounter{\@enumctr}%
       \renewcommand{\labelenumi}{\theenumi.\,\,}%
       \setlength{\parskip}{0\baselineskip}%
       \setlength{\topsep}{.25\baselineskip}%
       \setlength{\parsep}{0\baselineskip}%
       \setlength{\partopsep}{0\baselineskip}%
       \setlength{\itemsep}{0\baselineskip}%
       \setlength{\labelwidth}{2em}%
       \setlength{\labelsep}{0.5em}%
       \setlength{\leftmargin}{3em}%
       \setlength{\itemindent}{0em}%
       \setlength{\listparindent}{0em}%
    }
  \fi}
\def\endenumerate{\endlist}


