\newenvironment{column}[1]%
 {\vspace{.75\baselineskip}
  \begin{tcolorbox}[enhanced, title={\sffamily\bfseries\normalsize #1}, 
                    coltitle=white,colback=black!10!white,
                    boxed title style={size=small,colback=black!50!white,colframe=black!0!white},
                    breakable, enhanced jigsaw, boxrule=0pt,
                    before upper={\parindent1em},
                    ]
  \interlinepenalty9999
